
<div class='container'>
  <div class='new-message-container animated fadeIn'>
    <h1 class="display-4">New Message</h1>
    <p class="lead">Leave a special message for Maddie to read on her graduation day.</p>
    <hr class="my-4">

    <%= form_with scope: :message, url: messages_path, :html => {:class => "form-horizontal center"}, local: true do |form| %>
      <div class="form-group row">
        <p>
          <%= form.label 'Message:', class: "col-sm-2 col-form-label" %><br>
          <div class="col-sm-10">
            <%= form.text_area :text, class: "form-control" %>
          </div>
        </p>
      </div>

      <div class="form-group row">
        <p>
          <%= form.label 'From:', class: "col-sm-2 col-form-label" %><br>
          <div class="col-sm-10">
            <%= form.text_field :author, class: "form-control" %>
          </div>
        </p>
      </div>
    
      <p>
        <%= form.submit :Submit, class: 'btn btn-primary' %>
      </p>
    <% end %>

    <%= link_to '< back', root_path %>
  </div>
</div>
