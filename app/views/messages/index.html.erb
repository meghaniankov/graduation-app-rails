<div class='container'>
  <h1>All Messages</h1>
  
  <table>
    <tr>
      <th>From</th>
      <th>Message</th>
      <th></th>
    </tr>
  
    <% @messages.each do |message| %>
      <tr>
        <td><%= message.author %></td>
        <td><%= message.text %></td>
        <td><%= link_to 'Show', message_path(message) %></td>
      </tr>
    <% end %>
  </table>
</div>